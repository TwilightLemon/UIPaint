<Window x:Class="UIPaint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIPaint"
        mc:Ignorable="d"
        Title="MainWindow" Width="768" Height="600" Loaded="Window_Loaded">
    <Grid>
        <Border Width="500" Height="500" Background="White">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="30" Opacity="0.4"/>
            </Border.Effect>
            <WrapPanel x:Name="wp"/>
        </Border>
        <Button x:Name="bt" Content="ReStart" HorizontalAlignment="Left" Margin="26,50,0,0" VerticalAlignment="Top" Width="75" Height="35" Click="Button_Click"/>
        <TextBlock x:Name="tb" HorizontalAlignment="Left" Margin="26,95,0,0" TextWrapping="Wrap" Text="Size: " VerticalAlignment="Top"/>
        <TextBox x:Name="tx" HorizontalAlignment="Left" Height="23" Margin="26,110,0,0" TextWrapping="Wrap" Text="50" VerticalAlignment="Top" Width="75" TextChanged="TextBox_TextChanged"/>
    </Grid>
</Window>
